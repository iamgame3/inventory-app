<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel='stylesheet' href='/stylesheets/normalize.css' />
    <link rel='stylesheet' href='/stylesheets/style.css' />
  </head>
  <body>
    <nav>
      <ul class="main-nav">
        <li><a href="/">Home</a></li>
        <li><a href="/monkeys">All Monkeys</a></li>
        <li><a href="/categories">All Categories</a></li>
      </ul>
      <ul class="create-nav">
        <li><a href="/monkey/create">Create A Monkey</a></li>
        <li><a href="/category/create">Create A Category</a></li>
      </ul>
    </nav>
    <main>
        <h1><%= title %></h1>

        <form method="POST">
          <div class="form-group">
            <label for="name">Category:</label>
            <input id="name" class="form-input" type="text" placeholder="Primary, Military, etc." name="name" required value="<%= (typeof category === 'undefined' ? '' : category.name) %>">
          </div>
          <div class="form-group">
            <label for="description">Category:</label>
            <input id="description" class="form-input" type="text" placeholder="Very OP..." name="description" required value="<%= (typeof category === 'undefined' ? '' : category.description) %>">
          </div>
          <button class="submit-button" type="submit">Submit</button>
        </form>
        
        <% if (typeof errors !== 'undefined') { %>
          <ul>
            <% errors.forEach(function(error) { %>
              <li><%= error.msg %></li>
            <% }); %>
          </ul>
        <% } %>
    </main>
  </body>
</html>
