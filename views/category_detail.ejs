<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel='stylesheet' href='/stylesheets/normalize.css' />
    <link rel='stylesheet' href='/stylesheets/style.css' />
  </head>
  <body>
    <nav>
      <ul class="main-nav">
        <li><a href="/">Home</a></li>
        <li><a href="/monkeys">All Monkeys</a></li>
        <li><a href="/categories">All Categories</a></li>
      </ul>
      <ul class="create-nav">
        <li><a href="/monkey/create">Create A Monkey</a></li>
        <li><a href="/category/create">Create A Category</a></li>
      </ul>
    </nav>
    <main>
      <h1 class="detail-header">Category: <%= category.name %></h1>
      <p><strong>Description:</strong> <%= category.description %></p>
      <div>
        <% if (category_monkeys.length) { %>
            <% category_monkeys.forEach(function(monkey) { %>
              <ul>
                <li>
                  <a href="<%= monkey.url %>"><%= monkey.name %></a>
                  ($<%= monkey.price %>)
                </li>
              </ul>
            <% }); %>
        <% } else { %>
          <p>This category has no monkeys.</p>
        <% } %>
        <p class="delete-link">
          <a href="<%= category.url %>/delete">Delete category</a>
        </p>
        <p>
          <a href="<%= category.url %>/update">Update category</a>
        </p>
      </div>
    </main>
  </body>
</html>
